# =============================================================================
# Reforge - LLM-Assisted Reverse Engineering Orchestration
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=dRD4QMITc4S1r2pJuAfNvFJhE7T+vTB9

# Timezone
TIMEZONE=Europe/Berlin

# =============================================================================
# PostgreSQL Configuration (Reforge's own database)
# =============================================================================
POSTGRES_DB=reforge
POSTGRES_USER=reforge_user
POSTGRES_PASSWORD=reforge_secure_password_123
POSTGRES_PORT=5433

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# Assemblage Bridge Configuration
# =============================================================================
ASSEMBLAGE_BRIDGE_PORT=8090
ASSEMBLAGE_LOCAL_OUT_DIR=/files/binaries
ASSEMBLAGE_DB_PATH=/files/assemblage_bridge/jobs.db

# Optional: Require API key for bridge endpoints
ASSEMBLAGE_BRIDGE_REQUIRE_API_KEY=false
# ASSEMBLAGE_BRIDGE_API_KEY=your-api-key-here

# =============================================================================
# Assemblage Connection Configuration
# =============================================================================
# RabbitMQ (from Assemblage stack)
ASSEMBLAGE_MQ_HOST=assemblage-rabbitmq-1
ASSEMBLAGE_MQ_PORT=5672
ASSEMBLAGE_MQ_USER=guest
ASSEMBLAGE_MQ_PASSWORD=guest
ASSEMBLAGE_MQ_VHOST=/

# MinIO/S3 (from Assemblage stack)
ASSEMBLAGE_S3_ENDPOINT=http://minio:9000
ASSEMBLAGE_S3_ACCESS_KEY=minioadmin
ASSEMBLAGE_S3_SECRET_KEY=minioadmin
ASSEMBLAGE_S3_BUCKET=artifacts
ASSEMBLAGE_S3_REGION=us-east-1

# Dataset/Project naming
ASSEMBLAGE_DEFAULT_DATASET=Reforge

# =============================================================================
# Ghidra Configuration
# =============================================================================
# Path to Ghidra installation (host path for reference)
GHIDRA_INSTALL_DIR=/opt/ghidra

# =============================================================================
# Experiment Tracking
# =============================================================================
# Unique identifier for experiment runs
EXPERIMENT_PREFIX=exp
