# =============================================================================
# Reforge - LLM-Assisted Reverse Engineering Orchestration
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# # n8n Configuration
# # =============================================================================
# N8N_HOST=localhost
# N8N_PORT=5678
# N8N_PROTOCOL=http

# Generate with: openssl rand -hex 32
# N8N_ENCRYPTION_KEY=dRD4QMITc4S1r2pJuAfNvFJhE7T+vTB9

# Timezone
TIMEZONE=Europe/Berlin

# =============================================================================
# PostgreSQL Configuration (Reforge's own database)
# =============================================================================
POSTGRES_DB=reforge
POSTGRES_USER=reforge_user
POSTGRES_PASSWORD=reforge_secure_password_123
POSTGRES_PORT=5433

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# n8n Queue Mode â€” Worker Scaling
# =============================================================================
# n8n runs in queue mode by default (EXECUTIONS_MODE=queue in docker-compose).
# Scale workers: docker compose up --scale n8n-worker=4 -d
# Workers use Redis DB 2 (QUEUE_BULL_REDIS_DB=2) to avoid collisions with
# other Redis users in the stack.

# =============================================================================
# Ghidra Configuration
# =============================================================================
# Path to Ghidra installation (host path for reference)
GHIDRA_INSTALL_DIR=/opt/ghidra

# =============================================================================
# Experiment Tracking
# =============================================================================
# Unique identifier for experiment runs
EXPERIMENT_PREFIX=exp
